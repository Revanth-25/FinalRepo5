@model IEnumerable<OrdersList>
@{
    ViewData["Title"] = "Index";
}
<div class=" container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Orders List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Orders" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Add </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Order Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.OrderNumber
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
